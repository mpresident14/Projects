<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miles.holdemodds.WinPercentages"
    android:background="@color/main_background">

    <LinearLayout
        android:id="@+id/board"
        android:tag="board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/board1"
            android:src="@drawable/card_back"
            tools:ignore="contentDescription"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/board2"
            android:src="@drawable/card_back"
            tools:ignore="contentDescription"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/board3"
            android:src="@drawable/card_back"
            tools:ignore="contentDescription"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/board4"
            android:src="@drawable/card_back"
            tools:ignore="contentDescription"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/board5"
            android:src="@drawable/card_back"
            tools:ignore="contentDescription"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/board"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/player1"
            android:tag="player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:id="@+id/player1_cards"
                android:tag="player1_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:id="@+id/player1_card1"
                    android:src="@drawable/card_back"
                    android:clickable="true"
                    tools:ignore="contentDescription"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:id="@+id/player1_card2"
                    android:src="@drawable/card_back"
                    android:clickable="true"
                    tools:ignore="contentDescription"/>
            </LinearLayout>

            <TextView
                android:id="@+id/win1"
                android:tag="win1"
                android:layout_width="wrap_content"
                android:layout_height= "wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/win"
                android:textColor="@color/win_color"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/tie1"
                android:tag="tie1"
                android:layout_width="wrap_content"
                android:layout_height= "wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/tie"
                android:textColor="@color/tie_color"
                android:fontFamily="serif"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2"
            android:tag="player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:id="@+id/player2_cards"
                android:tag="player2_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:id="@+id/player2_card1"
                    android:src="@drawable/card_back"
                    android:clickable="true"
                    tools:ignore="contentDescription"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:id="@+id/player2_card2"
                    android:src="@drawable/card_back"
                    android:clickable="true"
                    tools:ignore="contentDescription"/>
            </LinearLayout>

            <TextView
                android:id="@+id/win2"
                android:tag="win2"
                android:layout_width="wrap_content"
                android:layout_height= "wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/win"
                android:textColor="@color/win_color"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/tie2"
                android:tag="tie2"
                android:layout_width="wrap_content"
                android:layout_height= "wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/tie"
                android:textColor="@color/tie_color"
                android:fontFamily="serif"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player3"
            android:tag="player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/player3_cards"
                android:tag="player3_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/row1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/player4"
            android:tag="player4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/player4_cards"
                android:tag="player4_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player5"
            android:tag="player5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/player5_cards"
                android:tag="player5_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player6"
            android:tag="player6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/player6_cards"
                android:tag="player6_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/row2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/player7"
            android:tag="player7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/player7_cards"
                android:tag="player7_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player8"
            android:tag="player8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/player8_cards"
                android:tag="player8_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player9"
            android:tag="player9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/player9_cards"
                android:tag="player9_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/calculate"/>


</android.support.constraint.ConstraintLayout>
