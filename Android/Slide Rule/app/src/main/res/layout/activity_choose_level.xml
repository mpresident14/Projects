            android:text="@string/twelve"
            style="@style/LevelNumber"/>

        <TextView
            android:id="@+id/num13"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/thirteen"
            style="@style/LevelNumber"/>
        <TextView
            android:id="@+id/num14"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/fourteen"
            style="@style/LevelNumber"/>
        <TextView
            android:id="@+id/num15"
            android:layout_row="3"
            android:layout_column="2"
