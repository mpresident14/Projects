            android:text="@string/sixteen"
            style="@style/LevelNumber"/>

        <TextView
            android:id="@+id/num17"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/seventeen"
            style="@style/LevelNumber"/>
        <TextView
            android:id="@+id/num18"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/eighteen"
            style="@style/LevelNumber"/>
        <TextView
            android:id="@+id/num19"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/nineteen"
            style="@style/LevelNumber"/>
        <TextView
            android:id="@+id/num20"
            android:layout_row="4"
            android:layout_column="3"
            android:text="@string/twenty"
            style="@style/LevelNumber"/>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
