    <item
        android:top="200dp"
        android:right="5dp"
        android:id="@+id/star2">
        <bitmap android:src="@drawable/gold_star"
            android:gravity="center" />
    </item>
    <item
        android:top="250dp"
        android:right="25dp"
        android:id="@+id/star3">
        <bitmap android:src="@drawable/gray_star"
