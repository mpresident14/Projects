        <bitmap android:src="@drawable/level_background"
            android:gravity="center" />
    </item>
    <item
        android:top="250dp"
        android:left="15dp"
        android:id="@+id/star1">
        <bitmap android:src="@drawable/gold_star"
            android:gravity="left" />
