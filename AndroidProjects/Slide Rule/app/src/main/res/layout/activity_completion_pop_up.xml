<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miles.myapplication.CompletionPopUp"
    android:id="@+id/main"
    android:background="@drawable/popup_background">

    <LinearLayout
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="@id/main"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main">

        <ImageView
            android:id="@+id/star1"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/gold_star"
            tools:ignore="contentDescription" />
        <ImageView
            android:id="@+id/star2"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/gray_star"
            tools:ignore="contentDescription" />
        <ImageView
            android:id="@+id/star3"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/gray_star"
            tools:ignore="contentDescription" />

    </LinearLayout>

    <TextView
        android:id="@+id/level_complete"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintRight_toRightOf="@id/main"
        app:layout_constraintBottom_toTopOf="@id/stars"
        android:paddingBottom="20dp"
        android:text="@string/levelComplete"
        android:fontFamily="cursive"
        android:textSize="40sp"
        android:textColor="@color/colorPrimaryDark"/>



    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="@id/main"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/stars"
        android:paddingTop="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:rotation="165"
            android:id="@+id/restart"
            android:src="@drawable/restart_button"
            tools:ignore="contentDescription"
            android:contentDescription="@string/restart"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:src="@drawable/back_button"
            tools:ignore="contentDescription"
            android:contentDescription="@string/back"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="0dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/next"
            android:src="@drawable/next_button"
            tools:ignore="contentDescription"
            android:contentDescription="@string/next"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="0dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
